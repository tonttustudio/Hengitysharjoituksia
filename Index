<body>

<h1>Infinity-hengitys</h1>
<div class="wrapper">
  <svg viewBox="0 0 300 150">

    <!-- Selkeä infinity loop (pieni kahdeksikko) -->
    <path id="loop"
      d="
        M 75 75
        C 75 30, 20 30, 20 75
        C 20 120, 75 120, 75 75
        C 75 30, 130 30, 130 75
        C 130 120, 185 120, 185 75
        C 185 30, 240 30, 240 75
        C 240 120, 185 120, 185 75
        C 185 30, 130 30, 130 75
      "
      fill="none"
      stroke="rgba(255,255,255,0.25)"
      stroke-width="8"
      stroke-linecap="round"
    />

    <!-- Pallo -->
    <circle id="ball" r="10" fill="#4dd0ff" cx="75" cy="75"></circle>

  </svg>
</div>

<div id="phase">Sisään…</div>

<script>
  const path = document.getElementById("loop");
  const ball = document.getElementById("ball");
  const phase = document.getElementById("phase");

  const length = path.getTotalLength();
  const cycle = 10000; // 10s kierros

  let start = null;

  function animate(t) {
    if (!start) start = t;
    let progress = ((t - start) % cycle) / cycle; // 0..1

    // Piste radalla
    const point = path.getPointAtLength(progress * length);
    ball.setAttribute("cx", point.x);
    ball.setAttribute("cy", point.y);

    // Teksti: 0–0.5 sisään, 0.5–1 ulos
    if (progress < 0.5) {
      phase.textContent = "Sisään…";
    } else {
      phase.textContent = "Ulos…";
    }

    requestAnimationFrame(animate);
  }

  requestAnimationFrame(animate);
</script>

</body>
