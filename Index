<body>

<h1>Infinity Debug</h1>

<svg viewBox="0 0 300 150">
  <!-- Kaksi selkeää ympyrää (vasen ja oikea) -->
  <circle cx="90" cy="75" r="50" stroke="white" stroke-width="3" fill="none"/>
  <circle cx="210" cy="75" r="50" stroke="white" stroke-width="3" fill="none"/>

  <!-- Liikkuva pallo -->
  <circle id="ball" r="10" fill="cyan" cx="90" cy="75"></circle>
</svg>

<p id="status">Animaatio alkaa…</p>

<script>
const ball = document.getElementById("ball");
const statusEl = document.getElementById("status");

// Rakenna 200 pisteen rata kahdesta ympyrästä
let pathPoints = [];

// Vasen ympyrä
for (let i = 0; i < 100; i++) {
  const angle = (i / 100) * 2 * Math.PI;
  const x = 90 + 50 * Math.cos(angle);
  const y = 75 + 50 * Math.sin(angle);
  pathPoints.push({x, y});
}

// Oikea ympyrä
for (let i = 0; i < 100; i++) {
  const angle = (i / 100) * 2 * Math.PI;
  const x = 210 + 50 * Math.cos(angle);
  const y = 75 + 50 * Math.sin(angle);
  pathPoints.push({x, y});
}

let index = 0;

function animate() {
  const point = pathPoints[index];
  ball.setAttribute("cx", point.x);
  ball.setAttribute("cy", point.y);

  index = (index + 1) % pathPoints.length;

  requestAnimationFrame(animate);
  statusEl.textContent = "Pallo liikkuu " + index;
}

animate();
</script>

</body>
