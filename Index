<body>
  <div class="app">
    <h1>Infinity-hengitys</h1>
    <p class="subtitle">Seuraa palloa ja hengitä sen tahdissa.</p>

    <div class="breath-container">
      <svg viewBox="0 0 250 180">
        <!-- Infinity-rata -->
        <path
          id="loopPath"
          d="
            M 75 90
            C 75 50, 25 50, 25 90
            C 25 130, 75 130, 75 90
            S 125 50, 175 90
            S 225 130, 175 90
            S 125 50, 75 90
          "
          fill="none"
          stroke="rgba(255,255,255,0.2)"
          stroke-width="10"
          stroke-linecap="round"
        ></path>

        <!-- Pallo (hengityksen rytmi) -->
        <circle
          id="ball"
          cx="75"
          cy="90"
          r="10"
          fill="#4dd0ff"
        >
        </circle>

        <!-- Kevyt hehku pallon ympärille -->
        <circle
          id="ballGlow"
          cx="75"
          cy="90"
          r="18"
          fill="rgba(77, 208, 255, 0.25)"
        ></circle>
      </svg>
    </div>

    <div id="phaseLabel" class="phase-label">Sisään…</div>
    <div class="hint">Sisään kun pallo kulkee vasemman lenkin, ulos oikean lenkin.</div>
  </div>

  <script>
    const path = document.getElementById("loopPath");
    const ball = document.getElementById("ball");
    const glow = document.getElementById("ballGlow");
    const phaseLabel = document.getElementById("phaseLabel");

    const totalLength = path.getTotalLength();

    // Koko kierroksen kesto (ms)
    const cycleDuration = 10000; // 10 s → 5 s sisään, 5 s ulos

    let startTime = null;

    function animate(timestamp) {
      if (!startTime) startTime = timestamp;

      const elapsed = (timestamp - startTime) % cycleDuration;
      const progress = elapsed / cycleDuration; // 0…1

      // 0–0.5 = sisäänhengitys (vasen lenkki)
      // 0.5–1 = uloshengitys (oikea lenkki)
      const inhale = progress < 0.5;
      const phaseProgress = inhale ? progress / 0.5 : (progress - 0.5) / 0.5;

      // Pituus radalla
      const distance = totalLength * progress;
      const point = path.getPointAtLength(distance);

      ball.setAttribute("cx", point.x);
      ball.setAttribute("cy", point.y);
      glow.setAttribute("cx", point.x);
      glow.setAttribute("cy", point.y);

      // Pallon koko hengityksen mukaan:
      // sisään: kasvaa → 10 → 15
      // ulos: pienenee →
